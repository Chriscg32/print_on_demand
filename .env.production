# Production environment configuration for Vercel deployment

# Public variables (client-side accessible)
# These must be prefixed with NEXT_PUBLIC_ to be available in the browser
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_API_BASE_URL=https://api.printapp.example.com
NEXT_PUBLIC_PRINTIFY_API_URL=https://api.printify.com/v1
NEXT_PUBLIC_SHOPIFY_API_URL=https://production-store.myshopify.com/admin/api/2023-04
NEXT_PUBLIC_ANALYTICS_ID=UA-XXXXXXXX-1
NEXT_PUBLIC_FEATURE_SOCIAL_SHARING=true
NEXT_PUBLIC_FEATURE_ADVANCED_FILTERS=true
NEXT_PUBLIC_MAX_DESIGNS_PER_PAGE=24
NEXT_PUBLIC_ENABLE_MOCK_API=false
NEXT_PUBLIC_LOG_LEVEL=error

# Server-side only variables
# These are not prefixed with NEXT_PUBLIC_ and are only available on the server
# They will not be exposed to the browser
API_SECRET_KEY=your-secret-key-here
